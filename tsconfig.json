{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["vite/client"],
    "typeRoots": ["node_modules/@types", "src/types", "src/vite-env.d.ts", "env.d.ts"],

  },
  "include": ["src", "./jest-setup.ts", "*.d.ts", "types", "vite.config.ts", "../mockDataTs.ts","./src/apiEndpoint.ts","./src/vite-env.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
